<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Acoes">
   <children>
      <Label fx:id="lblRegistro" layoutX="179.0" layoutY="109.0" text="Registro">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="txtUsuario" layoutX="138.0" layoutY="211.0" promptText="              Usuario">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtSenha" layoutX="138.0" layoutY="295.0" promptText="               Senha">
         <font>
            <Font size="18.0" />
         </font>
      </PasswordField>
      <Button fx:id="btnRegistrar" layoutX="200.0" layoutY="390.0" mnemonicParsing="false" onAction="#ClicouRegistrar" text="Registrar">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnLogar" layoutX="214.0" layoutY="390.0" mnemonicParsing="false" onAction="#ClicouLogar" text="Entrar" visible="false">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Label fx:id="lblPreencha" layoutX="192.0" layoutY="354.0" text="Preencha os campos." textAlignment="JUSTIFY" textFill="#bc2e2e" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label fx:id="lblSenhaCurta" layoutX="132.0" layoutY="354.0" text="A senha deve conter pelo menos 6 digitos." textAlignment="JUSTIFY" textFill="#bc2e2e" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
